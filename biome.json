{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*.json",
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.mts",
      "**/*.mjs",
      "!!dist",
      "!!src-tauri",
      "!!node_modules",
      "!!.output",
      "!!.tanstack",
      "!src/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "all",
      "react": "all"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "useHookAtTopLevel": "error",
        "useImportExtensions": "off",
        "noUnresolvedImports": "off"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "useAwaitThenable": "error"
      },
      "suspicious": {
        "useGoogleFontDisplay": "error",
        "noDocumentImportInPage": "error",
        "noHeadImportInDocument": "error"
      },
      "style": {
        "noHeadElement": "error",
        "useComponentExportOnlyModules": {
          "level": "error",
          "options": {
            "allowExportNames": ["Route"]
          }
        }
      },
      "performance": {
        "noImgElement": "off"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    },
    "globals": []
  },
  "overrides": [
    {
      "linter": {
        "rules": {
          "style": {
            "noHeadElement": "off"
          }
        }
      },
      "includes": ["src/routes/__root.tsx"]
    }
  ]
}
